<html>
<head>
    <title>Gin WAF</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">    
    <link rel="stylesheet" href="/assets/css/index.css">
</head>
<body>
<div class="container">
    <div class="header">
        <h1><a href="/wiki"><img src="/assets/image/logo.png" width="256" height="128" alt="logo"></a></h1>
    </div>
    <br>

    <div class="card card-detail-size mb-3">
        <div class="row no-gutters">
            <div class="col-md-5">
                <img src="/assets/image/{{.wiki.PictureName}}" class="card-img">
                {{ if .UserId }}
                <form method="post" enctype="multipart/form-data" action="/update_wiki_picture">
                    <br>
                    <p><input type="file" name="file"></p>
                    <p><button class="con btn btn-primary" name="id" value="{{.wiki.ID}}">画像更新</button></p>
                </form>
                {{ end }}
            </div>
            <div class="col-md-7 card-color">
                <div class="card-body">
                    <p class="card-text">
                        <form method="post" action="/update_wiki/{{.wiki.ID}}">
                            <p class="card-title">用語：<input type="text" name="title" size="30" placeholder="入力してください" value="{{.wiki.Title}}"></p>
                            <p>意味：<br>
                                <textarea name="text" rows="7" style="width: 300px;">{{.wiki.Body.Text}}</textarea>
                            </p>
                            <p>作成者：<input type="text" name="author" size="28" value="{{.wiki.Body.Author}}"></p>
                            <p>参考：<input type="url" name="url" size="30" value="{{.wiki.Body.Url}}"></p>
                            <p>出現画面：
                                <select name="screenId">
                                    {{if eq .wiki.ScreenID 1}}
                                        <option value="1" selected>A ページ</option>
                                        <option value="2">B ページ</option>
                                        <option value="3">C ページ</option>
                                    {{else if eq .wiki.ScreenID 2}}
                                        <option value="1">A ページ</option>
                                        <option value="2" selected>B ページ</option>
                                        <option value="3">C ページ</option>
                                    {{else if eq .wiki.ScreenID 3}}
                                        <option value="1">A ページ</option>
                                        <option value="2">B ページ</option>
                                        <option value="3" selected>C ページ</option>
                                    {{end}}                                   
                                </select>
                            </p>
                            {{ if .UserId }}
                            <button class="con btn btn-primary">更新</button>
                            {{ end }}
                        </form> 
                        {{ if .UserId }}
                        <form method="post" action="/delete_wiki/{{.wiki.ID}}">
                            <button class="del btn btn-primary">削除</button>
                        </form>
                        {{ end }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.bundle.min.js" integrity="sha384-zDnhMsjVZfS3hiP7oCBRmfjkQC4fzxVxFhBx8Hkz2aZX8gEvA/jsP3eXRCvzTofP" crossorigin="anonymous"></script>
    <script src="/assets/js/index.js"></script>
</div>
</body>
</html>